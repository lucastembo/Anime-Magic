    ViewBag.Title = "About";
}
<main aria-labelledby="title" class="container my-5">

    <section class="mb-5">
        <h3>About AnimeMagic</h3>
        <p>Welcome to <strong>AnimeMagic </strong>! Our platform is dedicated to all things anime, from the latest releases to timeless classics. At AnimeMagic , we provide detailed information about your favorite shows, including episode counts, genres, and ratings. Whether you're a long-time fan or new to anime, we're here to help you discover the best content the anime world has to offer.</p>
    </section>

    <section class="mb-5">
        <h3>What We Offer</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Anime Database</h5>
                        <p class="card-text">Explore a vast collection of anime series and movies, complete with detailed information such as episode count, score, and genres.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">User Reviews</h5>
                        <p class="card-text">Read and submit reviews for your favorite anime. Engage with the community and share your thoughts about the shows you've watched.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Recommendations</h5>
                        <p class="card-text">Get personalized recommendations based on your anime preferences. Discover new shows that suit your taste!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="mb-5">
        <h3>Why Choose AnimeMagic?</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="media mb-4">
                    <img src="https://imagedelivery.net/LBWXYQ-XnKSYxbZ-NuYGqQ/fc97479d-920d-4858-69dc-6d965f09bd00/avatarhd" class="mr-3 mb-3 rounded-circle" alt="Wide Anime Collection" style="width: 140px; height: 140px;">
                    <div class="media-body">
                        <h5 class="mt-0">Wide Anime Collection</h5>
                        <p>We have one of the largest databases of anime titles, ranging from popular shows to hidden gems.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="media mb-4">
                    <img src="https://sm.ign.com/t/ign_in/lists/b/best-anime/best-anime-series-on-netflix-right-now-april-2024_rz49.1080.jpg" class="mr-3 mb-3 rounded-circle" alt="Community Driven" style="width: 140px; height: 140px">
                    <div class="media-body">
                        <h5 class="mt-0">Community Driven</h5>
                        <p>Our platform is built for anime lovers by anime lovers. Join our passionate community and contribute your reviews and opinions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="mb-5">
        <h3>Our Vision</h3>
        <p>At AnimeMagic, our vision is to create the ultimate destination for anime fans worldwide. We strive to become the go-to platform for discovering, reviewing, and sharing everything anime.</p>
    </section>

    <section class="text-center">
        <h3>Contact Us</h3>
        <p>If you have any questions or suggestions, feel free to <span class="text-bg-primary px-2 py-1 rounded-pill">Get In Touch</span>. We would love to hear from you!</p>
    </section>
